    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        document.addEventListener('DOMContentLoaded', () => {
            const backgroundChanger = document.getElementById('background-changer');
            const sections = document.querySelectorAll('section.fade-in');
            const header = document.querySelector('header');

            const defaultBg = "url('https://placehold.co/1920x1080/4F6F7F/E0F2F7?text=JEMCITY')";

            const contentObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const bgImage = entry.target.getAttribute('data-bg-image');
                        if (bgImage) {
                            backgroundChanger.style.backgroundImage = `url('${bgImage}')`;
                        }
                    }
                });
            }, {
                root: null,
                rootMargin: '0px',
                threshold: 0.5 
            });

            const headerObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        backgroundChanger.style.backgroundImage = defaultBg;
                    }
                });
            }, {
                root: null,
                rootMargin: '0px',
                threshold: 0.5
            });

            sections.forEach(section => {
                contentObserver.observe(section);
            });
            headerObserver.observe(header);
        });

        // Hàm sao chép IP
        function copyIP() {
            const ipElement = document.getElementById('ip-address');
            if (ipElement) {
                const ipAddress = ipElement.innerText;
                fallbackCopyTextToClipboard(ipAddress);
            } else {
                console.error('Không tìm thấy phần tử có ID "ip-address".');
            }
        }
        
        function fallbackCopyTextToClipboard(text) {
            var textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.position = "fixed";  
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            try {
                document.execCommand('copy');
                alert('IP đã được sao chép!');
            } catch (err) {
                alert('Không thể sao chép IP, vui lòng sao chép thủ công.');
            }
            document.body.removeChild(textArea);
        }
    </script>
</body>
